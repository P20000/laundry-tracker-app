{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./", // Start in the backend folder!
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
    "../shared/**/*" // Keep if importing types from shared
  ],
  "exclude": ["node_modules", "dist"]
}
