{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",             // Changed from "./src" to "./" to include shared/types
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "prisma/**/*", "shared/**/*"], // Expanded includes to catch prisma and shared files
  "exclude": ["node_modules", "dist"]
}