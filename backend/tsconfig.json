{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    
    // CRITICAL FIX: Set rootDir to the parent folder so TS accepts ../shared
    "rootDir": "..",
    
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    
    // Explicitly load types to fix the 'process' and 'express' errors
    "types": ["node", "express", "cors"]
  },
  // Include the local source and the shared folder
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}